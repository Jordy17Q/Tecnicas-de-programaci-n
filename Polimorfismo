# Clase base
class Animal:
    def hacer_sonido(self):
        print("El animal hace un sonido")

# Clase derivada 1
class Perro(Animal):
    def hacer_sonido(self):
        print("El perro ladra: ¡Guau!")

# Clase derivada 2
class Gato(Animal):
    def hacer_sonido(self):
        print("El gato maúlla: ¡Miau!")

# Uso del polimorfismo
animales = [Perro(), Gato()]

for animal in animales:
    animal.hacer_sonido()
